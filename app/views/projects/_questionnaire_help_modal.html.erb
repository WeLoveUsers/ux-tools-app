          <td class="center aligned"><%= ResponseSu::Infos[:number_of_questions] %></td>
        </tr>
        <tr>
          <td><%= ResponseDeep::Infos[:display_name] %> (<%= ResponseDeep::Infos[:display_name_short] %>)</td>
          <td><%= ResponseDeep::Infos[:description].html_safe %></td>
