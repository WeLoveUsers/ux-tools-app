<div class="ui middle aligned center aligned grid">
  <div class="left aligned login column">
    <h2 class="ui header"><%= t('.forgot_your_password') %></h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "ui large form password"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="ui stacked segment">
      <div class="field">
        <div class="ui left icon input">
          <i class="user icon"></i>
          <input autofocus="autofocus" placeholder="Adresse e-mail" type="email" value="<%= resource.email %>" name="user[email]" id="user_email">
        </div>
      </div>

      <%= f.submit t('.send_me_reset_password_instructions'), :class => "ui large fluid submit button" %>
    </div>
    <% end %>

    <div class="ui message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
